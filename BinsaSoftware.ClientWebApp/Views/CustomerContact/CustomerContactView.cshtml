@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico">
    <link href="~/lib/bootstrap-4.1.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap4material-1-4-2/css/fontastic.css" rel="stylesheet" />
    <link href="~/lib/bootstrap4material-1-4-2/css/style.default.css" rel="stylesheet" />
    <link href="~/css/spin.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,700">
    <link rel="stylesheet" href="~/lib/bootstrap-datepicker/bootstrap-datepicker.min.css">

    <script src="~/lib/jquery-1.12.4/jquery-1.12.4.js"></script>
    <script src="~/lib/bootstrap-4.1.0/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery.cookie/jquery.cookie.js"></script>
    <script src="~/lib/bootstrap4material-1-4-2/js/front.js"></script>
    <script src="~/lib/blockui/blockui.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/CustomerContact/Create/create-customer-contact.js"></script>
    <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
    <script src="~/lib/toastr/toastr.min.js"></script>
    <link rel="stylesheet" href="~/css/spin.css">

    <script src="~/lib/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/bootstrap-datepicker.es.min.js"></script>

</head>
<body style="font-size:13px;">
    <div id="cover-spin"></div>
    <span style="display:none;" id="clientId" value="@ViewBag.clientId">@ViewBag.clientId</span>
    <div id="header" style="position:absolute;  left:0px; height:200px; right:0px;overflow:hidden;">
        <div class="col-md-7" style="left:20px;margin-top:20px">
            <h6 style="color:black; font-size:16px;"><strong>FICHA CLIENTE </strong></h6>
        </div>
    </div>
    <div id="content" style="position:absolute; top:70px; bottom:65px; left:0px; right:0px; overflow:auto; padding-left:20px; padding-right:20px">
        <div class="col-md-12 col-lg-12 col-sm-12 align-content-sm-center align-content-center align-content-md-center align-content-lg-center">
            <form>
                <br />
                <div id="loader"></div>
                <div class="form-row">
                     <div class="form-group col-sm-12">
                        <label class="control-label">Seleccione el cliente</label><span style="color:red">(*)</span>
                          <select id="dpdClients" class="select2_single form-control" tabindex="-1" style="font-size: small;border-radius:5px">
                            <option value="0">Seleccione</option> 
                         </select>
                        <span class="control-label" style="color:red;font-size:12px;display: none;" id="msg_campo_valido1">Campo inválido*</span>
                    </div>
                </div>
                 
                <div class="form-row">
                    <div class="form-group col-sm-12">
                        <label class="control-label">Nombres</label><span style="color:red">(*)</span>
                        <input type="text" class="form-control" name="txtNames" id="txtNames" style="font-size: small;border-radius:5px" onkeyup="document.getElementById(this.id).value=document.getElementById(this.id).value.toUpperCase()">
                        <span class="control-label" style="color:red;font-size:12px;display: none;" id="msg_campo_valido2">Campo inválido*</span>
                    </div>

                    <div class="form-group col-sm-12">
                        <label class="control-label">Teléfono</label><span style="color:red">(*)</span>
                        <input type="text" class="form-control" name="txtPhone" id="txtPhone" style="font-size: small;border-radius:5px">
                        <span class="control-label" style="color:red;font-size:12px;display: none;" id="msg_campo_valido3">Campo inválido*</span>
                    </div>

                    <div class="form-group col-sm-12">
                        <label class="control-label">Email</label><span style="color:red">(*)</span>
                        <input type="text" class="form-control" name="txtEmail" id="txtEmail" style="font-size: small;border-radius:5px" onkeyup="document.getElementById(this.id).value=document.getElementById(this.id).value.toUpperCase()">
                        <span class="control-label" style="color:red;font-size:12px;display: none;" id="msg_campo_valido4">Campo inválido*</span>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div id="footer" style="position:absolute; bottom:16px; margin-left:75%;">
        <div class="form-row">
            <div class="col">
                <button class="btn btn-primary" id="btnGrabar" onclick="registerCustomerContact();">
                    <span style="color: #fff;">Grabar</span>
                </button>
            </div>

            <div class="col-5">
                <button class="btn btn-primary" id="btnClose" data-dismiss="modal" onclick="closePopup();">
                    <span style="color: #fff;">Cerrar</span>
                </button>
            </div>
        </div>
    </div>
</body>
</html>
